{
  "name": "shopify-dashboard",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "pnpm --parallel --filter api --filter web run dev",
    "build:web": "pnpm -C apps/web build",
    "build:api": "pnpm -C apps/api build",
    "build": "pnpm build:web && pnpm build:api",
    "start": "node apps/api/dist/main.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "pnpm --parallel --filter api --filter web run typecheck",
    "test": "pnpm --parallel --filter api --filter web run test",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:reset": "docker compose down -v && docker compose up -d"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.8.0",
    "globals": "^17.3.0",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.56.0",
    "vue-eslint-parser": "^10.4.0"
  }
}
